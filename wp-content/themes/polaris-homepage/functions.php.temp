  // Register Polaris Block Category
  function polaris_block_categories($categories) {
      return array_merge(
          $categories,
          array(
              array(
                  'slug'  => 'polaris-blocks',
                  'title' => 'Polaris Blocks',
                  'icon'  => 'star-filled',
              ),
          )
      );
  }
  add_filter('block_categories_all', 'polaris_block_categories', 10, 2);

  // Enqueue block editor assets
  function polaris_enqueue_block_editor_assets() {
      wp_enqueue_script(
          'polaris-header-block',
          get_template_directory_uri() . '/header-block.js',
          array('wp-blocks', 'wp-element', 'wp-block-editor'),
          '1.0.0',
          true
      );
  }
  add_action('enqueue_block_editor_assets',
  'polaris_enqueue_block_editor_assets');

